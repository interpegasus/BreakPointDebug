{
  "swagger": "2.0",
  "info": {
    "description": "Battle Royale API.",
    "version": "1.0.0",
    "title": "Battle Royale",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "http://localhost:3000",
  "basePath": "/api",
  "tags": [
    {
      "name": "sports",
      "description": "List of sports"
    },
    {
      "name": "games",
      "description": "Game Data"
    },
    {
      "name": "users",
      "description": "User data"
    },
    {
      "name": "leaderboard",
      "description": "List of sports"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/sports/": {
      "get": {
        "tags": [
          "sports"
        ],
        "summary": "List all sports",
        "description": "List of sports / leagues",
        "operationId": "listSports",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "league",
            "in": "query",
            "description": "Optional sport filter",
            "required": false,
            "type": "string",
            "collectionFormat": "multi"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid status value"
          }
        }
      }
    },
    "/games/": {
      "get": {
        "tags": [
          "games"
        ],
        "summary": "List all games",
        "description": "List of games",
        "operationId": "listGames",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "data",
            "in": "query",
            "description": "Optional date filter",
            "required": false,
            "type": "string",
            "collectionFormat": "multi"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid status value"
          }
        }
      }
    },
    "/games/{gameId}": {
      "get": {
        "tags": [
          "games"
        ],
        "summary": "Find game by ID",
        "description": "Returns a single game",
        "operationId": "getGameById",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "description": "ID of game to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid game ID supplied"
          },
          "404": {
            "description": "Game not found"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/games/{gameId}/leaderboard": {
      "get": {
        "tags": [
          "games"
        ],
        "summary": "Leaderboard data",
        "description": "Returns leaderboard game",
        "operationId": "getGameLeaderboard",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "description": "ID of game to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid game ID supplied"
          },
          "404": {
            "description": "Game not found"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/users/": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Find user by Email",
        "description": "Returns a single user",
        "operationId": "getUserByEmail",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "description": "Email of user to be returned",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid email supplied"
          },
          "404": {
            "description": "User not found"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "Sport": {
      "type": "object",
      "properties": {
        "league": {
          "type": "string"
        },
        "name": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "Game": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Battle Royale",
    "url": ""
  }
}